@model LoginViewModel
@{
}
<div class="container-lg pt-3">
    <form asp-controller="Auth" asp-action="Login" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username" asp-for="Username">
            <small id="emailHelp" class="form-text text-muted">We'll never share your data with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>