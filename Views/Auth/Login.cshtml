@model LoginViewModel

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span>Најави се</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Најави се</h2>
                    <form asp-controller="Auth" asp-action="Login" method="post">
                        <div class="group-input">
                            <label for="username">E-mail адреса *</label>
                            <input type="text" id="username"  placeholder="Внесете e-mail" asp-for="Username">
                        </div>
                        <div class="group-input">
                            <label for="pass">Лозинка *</label>
                            <input type="password" id="pass" placeholder="Внесете лозинка" asp-for="Password">
                        </div>
                        <div class="group-input gi-check">
                            <div class="gi-more">
                                <label for="save-pass">
                                    Зачувај лозинка
                                    <input type="checkbox" id="save-pass">
                                    <span class="checkmark"></span>
                                </label>
                                <a asp-area="" asp-controller="Auth" asp-action="RequestReset" class="forget-pass">Ресетирај лозинка</a>
                            </div>
                        </div>
                        <button type="submit" class="site-btn login-btn">Најави се</button>
                    </form>
                    <div class="switch-login">
                        <a href="/Auth/Register" class="or-login">Регистрирај се</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->