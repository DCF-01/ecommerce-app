@model RequestResetViewModel
<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span>Login</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Reset password</h2>
                    <form asp-controller="Auth" asp-action="RequestReset" method="post">
                        <div class="group-input">
                            <label for="username">Enter your email address: </label>
                            <input type="email" id="email" placeholder="Enter email" asp-for="Email">
                        </div>
                        @if (Model.Message != null) {
                            <p>@Model.Message</p>
                        }
                        <button type="submit" class="site-btn login-btn">Send reset link</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->