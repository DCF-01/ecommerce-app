<div class="container-lg mt-5 mb">
    <div class="row">
        @for (int j = 0; j < 12; j++) {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-5">
                <div class="card mx-auto text-center" style="width: 14rem;">
                    <img src="~/img/1.jpg" class="card-img-top" alt="...">
                    <div class="card-body justify-content-center">
                        <h5 class="card-title">Product Name</h5>
                        <p class="card-text">This is a long product description.</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        @if (User.Identity.IsAuthenticated) {
                            <li class="list-group-item"><s>Regular price: 220</s></li>
                            <li class="list-group-item">Sale price: 120</li>
                        }
                        else {
                            <li class="list-group-item">Regular price: 220</li>
                        }
                    </ul>
                    <div class="card-body">
                        <a href="#" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>