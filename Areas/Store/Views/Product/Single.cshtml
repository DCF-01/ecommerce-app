@model ProductViewModel

<div class="container-lg mt-5">
    <div class="row mb-5">
        <div class="col-6">
            <img src="data:image/png;base64, @Model.Img" alt="Alternate Text" id="product-image" />
        </div>
        <div class="col-6">
            <p class="display-3">@Model.Name</p>
            <hr />
            <p>@Model.Description</p>
            <p>Second Row Description</p>
            <p>@Model.Id</p>
            <hr />
            <div class="row align-items-center">
                <i class="far fa-check-circle fa-3x pr-3" style="color: green;"></i>
                <p class="m-0 h4">Производот е на залиха</p>
            </div>
        </div>
    </div>


    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="default-tab" data-toggle="tab" href="#default" role="tab" aria-controls="default" aria-selected="true">Default</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="spec-tab" data-toggle="tab" href="#spec" role="tab" aria-controls="spec" aria-selected="false">Spec</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="default" role="tabpanel" aria-labelledby="default-tab">
            <h1>Default Tab </h1>
        </div>
        <div class="tab-pane fade" id="spec" role="tabpanel" aria-labelledby="spec-tab">
            <h1>Spec Tab</h1>
        </div>
    </div>


</div>