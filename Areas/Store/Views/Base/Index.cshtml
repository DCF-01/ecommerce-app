@model StoreViewModel
@{
    var prev = Model.Page_number - 1;
    var next = Model.Page_number + 1;
}
<div id="alert-container">
</div>
<div class="container-lg container-custom">
    <form>
        <div class="form-row">
            <div class="col-lg-2 col-sm-0"></div>
            <div class="col-lg-10 col-sm-12">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-4 d-flex justify-content-center align-items-end mb-sm-3">

                        <input class="custom-input w-100" placeholder="Пребарај" type="text" id="store-search">
                        <button class="m-0" id="custom-input-clear">X</button>
                        <ul class="list-group" id="search-suggestions">
                        </ul>


                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-1 d-flex justify-content-center align-items-end mb-sm-3">
                        <p class="m-0">1-64 од 100</p>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-sm-3">
                        <select id="inputState" class="form-control">
                            <option selected>Најниско до највисоко</option>
                            <option>Највисоко до највисоко</option>
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-3 form-inline mb-sm-3">
                        <label class="mr-3">Производи на страна:</label>
                        <select id="inputState" class="form-control">
                            <option selected>24</option>
                            <option>48</option>
                            <option>48</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="container-lg container-custom mt-5 mb">
    <div class="row">
        <div class="col-lg-2 col-sm-12">
            <div>
                <p style="border-bottom: 1px solid green">Категории</p>
            </div>
            <div class="list-group categories-menu">
                @{
                    if (Model.Categories == null) {
                        <a href="#" class="list-group-item list-group-item-action">No categories to display</a>
                    }
                    else {
                        foreach (var c in Model.Categories) {
                            if (c.Name == Model.CurrentCategory) {
                                <a asp-controller="Base" asp-action="Category" asp-route-id="@c.CategoryId" class="list-group-item list-group-item-action active" id="active-category">
                                    @c.Name
                                </a>
                            }
                            else {

                                <a asp-controller="Base" asp-action="Category" asp-route-id="@c.CategoryId" class="list-group-item list-group-item-action">@c.Name</a>
                            }
                        }
                    }
                }
            </div>
        </div>
        <div class="col-lg-10 col-sm-12">
            <div class="row">
                @*12*@
                @foreach (var product in Model.Products) {
                    <div class="product-single col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-5">
                        <p class="h5"><a asp-controller="Product" asp-action="Single" asp-route-id="@product.ProductId">@product.Name</a></p>
                        <div class="mt-4">
                            <div class="image-container mb-4">
                                @if (product.OnSale) {
                                    <div class="discount-circle d-flex justify-content-center align-items-center">
                                        @{ double temp_number = ((double)product.SalePrice - (double)product.Price) / (double)product.Price;
                                            double discount = Math.Round(temp_number * 100, 0);
                                        }
                                        <p class="m-0">@discount%</p>
                                    </div>
                                }
                                else {
                                    <div class="discount-circle d-none justify-content-center align-items-center">
                                    </div>
                                }
                                <a asp-controller="Product" asp-action="Single" asp-route-id="@product.ProductId">
                                    <img class="img-fluid w-100" src="data:image/png;base64, @product.Img" alt="Alternate Text" />
                                </a>
                            </div>
                            @if (product.OnSale) {

                                <div class="promotion-price-box d-flex justify-content-between pl-3 pr-3">
                                    <div class="d-flex align-items-center mt-2 mb-2">
                                        <p class="mb-0">На попуст:</p>
                                    </div>
                                    <div class="d-flex align-items-center mt-2 mb-2">
                                        <p class="h4 mb-0">@product.SalePrice</p>
                                        <p class="mb-0">&nbsp;ден</p>
                                    </div>
                                </div>
                            }
                            else {
                                <div class="promotion-price-box d-flex justify-content-between pl-3 pr-3" style="opacity: 0;">
                                    <div class="d-flex align-items-end mt-3">
                                        <p class="mb-0">Промотивна цена:</p>
                                    </div>
                                    <div class="d-flex align-items-end mt-3">
                                        <p class="h4 mb-0">666</p>
                                        <p class="mb-0">&nbsp;ден</p>
                                    </div>
                                </div>
                            }
                            <div class="d-flex justify-content-between pl-3 pr-3">
                                <div class="d-flex align-items-end mt-3">
                                    <p class="mb-0">Цена:</p>
                                </div>
                                <div class="d-flex align-items-end">
                                    <p class="h4 mb-0 mt-3">@product.Price</p>
                                    <p class="mb-0 mt-3">&nbsp;ден</p>
                                </div>
                            </div>
                            <hr class="grey-hr mt-1" />
                            <div class="d-flex justify-content-between">
                                <div class="d-flex align-items-center">
                                    @if (product.InStock) {
                                        <i class="fas fa-check" style="color: green;"></i>
                                    }
                                    else {
                                        <i class="fas fa-times" style="color: red;"></i>
                                    }
                                    <p class="m-0 pl-2">Залиха</p>
                                </div>
                                <button type="button" class="btn btn-success d-flex justify-content-between align-items-center"><i class="fas fa-shopping-cart pr-2"></i><p class="m-0">Додади</p></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <nav aria-label="...">
        <ul class="pagination">
            @if (Model.Page_number < 2) {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
            }
            else {
                <li class="page-item">
                    <a class="page-link" href="@prev" tabindex="-1">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.Number_of_pages; i++) {
                if (i == Model.Page_number) {
                    <li class="page-item active">
                        <a class="page-link" asp-controller="Base" asp-action="Index" asp-route-id="@i">@i<span class="sr-only">(current)</span></a>
                    </li>
                }
                else {
                    <li class="page-item"><a class="page-link" asp-controller="Base" asp-action="Index" asp-route-id="@i">@i</a></li>
                }

            }
            @if (Model.Page_number >= Model.Number_of_pages) {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Next</a>
                </li>
            }
            else {
                <li class="page-item">
                    <a class="page-link" href="@next">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>