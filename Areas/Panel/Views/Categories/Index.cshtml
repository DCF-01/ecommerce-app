@model List<Category>
@{ var i = 0;}
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Total products in category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            i += 1;
            <tr>
                <th scope="row">i</th>
                <td>@item.Name</td>
                <td>/////</td>
            </tr>
        }
    </tbody>
</table>
