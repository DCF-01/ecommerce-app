@model SpecViewModel
@{
    ViewBag.Title = User.Identity.Name;
    Layout = "~/Areas/Panel/Views/Shared/_PanelLayout.cshtml";
}
<div class="container-lg pt-3">
    <form asp-controller="Specs" asp-action="Create" method="post" enctype="multipart/form-data" id="spec-form">
        <div class="form-group row">
            <div class="col-6">
                <label>Spec Name</label>
                <input type="text" class="form-control" name="Name">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Type</label>
                <input type="text" class="form-control first-column" name="First[]">
            </div>
            <div class="col-3">
                <label>Title1</label>
                <input type="text" class="form-control second-column" name="First[]">
            </div>
            <div class="col-3">
                <label>Title2</label>
                <input type="text" class="form-control third-column" name="First[]">
            </div>
            <div class="col-3">
                <label>Title3</label>
                <input type="text" class="form-control fourth-column" name="First[]">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="text" class="form-control first-column-toggle" style="opacity: 0.4;" name="Rest[]" disabled>
            </div>
            <div class="col-3">
                <input type="text" class="form-control second-column-toggle" style="opacity: 0.4;" name="Rest[]" disabled>
            </div>
            <div class="col-3">
                <input type="text" class="form-control third-column-toggle" style="opacity: 0.4;" name="Rest[]" disabled>
            </div>
            <div class="col-3">
                <input type="text" class="form-control fourth-column-toggle" style="opacity: 0.4;" name="Rest[]" disabled>
            </div>
        </div>
    <div class="form-group" id="spec-add-item-group">
        <button type="button" class="btn btn-secondary" id="add-row-btn"><i class="fas fa-plus pr-2"></i>Add row</button>
    </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>