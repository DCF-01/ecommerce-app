@model RegisterViewModel


<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span>Регистрирај се</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Регистрирај се</h2>
                    <form asp-controller="Auth" asp-action="Register">
                        <div class="group-input">
                            <label for="username">E-mail адреса *</label>
                            <input type="email" id="username" asp-for="Email">
                        </div>
                        <div class="group-input">
                            <label for="pass">Лозинка *&nbsp;<span id="message"></span></label>
                            <input type="password" id="password" asp-for="Password" onkeyup="check()";>
                        </div>
                        <div class="group-input">
                            <label for="con-pass">Потврди лозинка *</label>
                            <input type="password" id="confirm_password" onkeyup="check();">
                        </div>
                        <button type="submit" class="site-btn register-btn" id="submit-btn-register" disabled>РЕГИСТРИРАЈ СЕ</button>
                    </form>
                    <div class="switch-login">
                        <a href="/Auth/Login" class="or-login">ИЛИ НАЈАВИ СЕ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->
